    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        :root {
            /* Brand Colors */
            --cb-primary: #6366f1;
            --cb-primary-dark: #4f46e5;
            --cb-primary-light: #818cf8;
            --cb-primary-50: #eef2ff;
            
            /* Semantic Colors */
            --cb-success: #10b981;
            --cb-success-dark: #059669;
            --cb-success-light: #d1fae5;
            --cb-warning: #f59e0b;
            --cb-warning-dark: #d97706;
            --cb-warning-light: #fef3c7;
            --cb-danger: #ef4444;
            --cb-danger-dark: #dc2626;
            --cb-danger-light: #fee2e2;
            --cb-info: #0ea5e9;
            --cb-info-dark: #0284c7;
            --cb-info-light: #e0f2fe;
            
            /* Neutral Colors - Gray Scale (Light Mode) */
            --cb-gray-50: #f8fafc;
            --cb-gray-100: #f1f5f9;
            --cb-gray-200: #e2e8f0;
            --cb-gray-300: #cbd5e1;
            --cb-gray-400: #94a3b8;
            --cb-gray-500: #64748b;
            --cb-gray-600: #475569;
            --cb-gray-700: #334155;
            --cb-gray-800: #1e293b;
            --cb-gray-900: #0f172a;

            /* Functional Colors */
            --cb-bg: #ffffff;
            --cb-bg-secondary: var(--cb-gray-50);
            --cb-bg-tertiary: var(--cb-gray-100);
            --cb-border: var(--cb-gray-200);
            --cb-border-light: var(--cb-gray-100);
            --cb-text: var(--cb-gray-800);
            --cb-text-secondary: var(--cb-gray-600);
            --cb-text-muted: var(--cb-gray-400);
            
            /* Typography */
            --cb-font: 'Plus Jakarta Sans', system-ui, -apple-system, sans-serif;
            
            /* Spacing */
            --cb-space-xs: 0.25rem;
            --cb-space-sm: 0.5rem;
            --cb-space-md: 1rem;
            --cb-space-lg: 1.5rem;
            --cb-space-xl: 2rem;
            --cb-space-2xl: 3rem;
            
            /* Borders */
            --cb-radius-sm: 0.375rem;
            --cb-radius: 0.5rem;
            --cb-radius-lg: 0.75rem;
            --cb-radius-xl: 1rem;
            --cb-radius-2xl: 1.5rem;
            
            /* Shadows */
            --cb-shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
            --cb-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
            --cb-shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
            --cb-shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
            --cb-shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
            
            /* Transitions */
            --cb-transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        }

        [data-theme="dark"] {
            /* Primary Colors - Dark Mode */
            --cb-primary: #818cf8;
            --cb-primary-dark: #6366f1;
            --cb-primary-light: #a5b4fc;
            --cb-primary-50: #312e81;
            
            /* Neutral Colors - Gray Scale (Dark Mode) */
            --cb-gray-50: #0f172a;
            --cb-gray-100: #1e293b;
            --cb-gray-200: #334155;
            --cb-gray-300: #475569;
            --cb-gray-400: #64748b;
            --cb-gray-500: #94a3b8;
            --cb-gray-600: #cbd5e1;
            --cb-gray-700: #e2e8f0;
            --cb-gray-800: #f1f5f9;
            --cb-gray-900: #f8fafc;

            /* Functional Colors - Dark Mode */
            --cb-bg: #0f172a;
            --cb-bg-secondary: #1e293b;
            --cb-bg-tertiary: #334155;
            --cb-border: #334155;
            --cb-border-light: #1e293b;
            --cb-text: #f1f5f9;
            --cb-text-secondary: #94a3b8;
            --cb-text-muted: #64748b;
            
            /* Shadows - Dark Mode */
            --cb-shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.3);
            --cb-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.3), 0 1px 2px -1px rgb(0 0 0 / 0.3);
            --cb-shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.3), 0 2px 4px -2px rgb(0 0 0 / 0.3);
            --cb-shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.3), 0 4px 6px -4px rgb(0 0 0 / 0.3);
            --cb-shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.3), 0 8px 10px -6px rgb(0 0 0 / 0.3);
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: var(--cb-font);
            background: var(--cb-bg);
            color: var(--cb-text);
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        /* Dark Mode Toggle */
        .theme-toggle {
            background: var(--cb-bg-secondary);
            border: 1px solid var(--cb-border);
            border-radius: var(--cb-radius);
            padding: 0.5rem;
            cursor: pointer;
            color: var(--cb-text);
            transition: var(--cb-transition);
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
        }

        .theme-toggle:hover {
            background: var(--cb-bg-tertiary);
            color: var(--cb-primary);
        }

        .theme-toggle .bi-moon-fill {
            display: none;
        }

        .theme-toggle .bi-sun-fill {
            display: inline-block;
        }

        [data-theme="dark"] .theme-toggle .bi-moon-fill {
            display: inline-block;
        }

        [data-theme="dark"] .theme-toggle .bi-sun-fill {
            display: none;
        }

        /* Navigation */
        .cb-nav {
            position: sticky;
            top: 0;
            z-index: 1030;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid var(--cb-border);
        }

        [data-theme="dark"] .cb-nav {
            background: rgba(15, 23, 42, 0.95);
        }

        .cb-nav-brand {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-weight: 800;
            font-size: 1.25rem;
            color: var(--cb-primary);
            text-decoration: none;
            letter-spacing: -0.025em;
        }

        .cb-nav-brand:hover {
            color: var(--cb-primary-dark);
        }

        .cb-nav-brand-icon {
            width: 36px;
            height: 36px;
            background: linear-gradient(135deg, var(--cb-primary) 0%, #8b5cf6 100%);
            border-radius: var(--cb-radius);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.1rem;
        }

        .cb-nav-link {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            font-weight: 500;
            color: var(--cb-text-secondary);
            text-decoration: none;
            border-radius: var(--cb-radius);
            transition: var(--cb-transition);
        }

        .cb-nav-link:hover {
            background: var(--cb-bg-secondary);
            color: var(--cb-text);
        }

        .cb-nav-link.active {
            background: var(--cb-primary-50);
            color: var(--cb-primary);
        }

        /* Buttons */
        .cb-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            padding: 0.625rem 1.25rem;
            font-weight: 600;
            font-size: 0.9rem;
            border-radius: var(--cb-radius);
            border: none;
            cursor: pointer;
            transition: var(--cb-transition);
            text-decoration: none;
        }

        .cb-btn-primary {
            background: linear-gradient(135deg, var(--cb-primary) 0%, var(--cb-primary-dark) 100%);
            color: white;
            box-shadow: 0 4px 14px 0 rgba(99, 102, 241, 0.39);
        }

        .cb-btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 20px 0 rgba(99, 102, 241, 0.23);
            color: white;
        }

        .cb-btn-secondary {
            background: white;
            color: var(--cb-gray-700);
            border: 1px solid var(--cb-gray-300);
        }

        .cb-btn-secondary:hover {
            background: var(--cb-gray-50);
            color: var(--cb-gray-800);
        }

        .cb-btn-success {
            background: linear-gradient(135deg, var(--cb-success) 0%, #059669 100%);
            color: white;
            box-shadow: 0 4px 14px 0 rgba(16, 185, 129, 0.39);
        }

        .cb-btn-danger {
            background: linear-gradient(135deg, var(--cb-danger) 0%, #dc2626 100%);
            color: white;
        }

        .cb-btn-sm {
            padding: 0.375rem 0.75rem;
            font-size: 0.8rem;
        }

        .cb-btn-lg {
            padding: 0.875rem 1.75rem;
            font-size: 1rem;
        }

        /* Cards */
        .cb-card {
            background: var(--cb-bg);
            border-radius: var(--cb-radius-xl);
            border: 1px solid var(--cb-border);
            box-shadow: var(--cb-shadow-sm);
            transition: var(--cb-transition);
        }

        .cb-card:hover {
            box-shadow: var(--cb-shadow-md);
            transform: translateY(-2px);
        }

        .cb-card-static {
            background: var(--cb-bg);
            border-radius: var(--cb-radius-xl);
            border: 1px solid var(--cb-border);
            box-shadow: var(--cb-shadow-sm);
        }

        /* Badges / Status */
        .cb-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.25rem 0.625rem;
            font-size: 0.75rem;
            font-weight: 600;
            border-radius: var(--cb-radius);
        }

        .cb-badge-success {
            background: var(--cb-success-light);
            color: #047857;
        }

        .cb-badge-warning {
            background: var(--cb-warning-light);
            color: #b45309;
        }

        .cb-badge-danger {
            background: var(--cb-danger-light);
            color: #b91c1c;
        }

        .cb-badge-info {
            background: var(--cb-info-light);
            color: #0369a1;
        }

        .cb-badge-neutral {
            background: var(--cb-gray-100);
            color: var(--cb-gray-600);
        }

        /* Form Elements */
        .cb-input {
            width: 100%;
            padding: 0.75rem 1rem;
            font-size: 0.95rem;
            border: 2px solid var(--cb-gray-200);
            border-radius: var(--cb-radius-lg);
            background: var(--cb-gray-50);
            color: var(--cb-gray-800);
            transition: var(--cb-transition);
        }

        .cb-input:focus {
            outline: none;
            border-color: var(--cb-primary);
            background: white;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

        .cb-input::placeholder {
            color: var(--cb-gray-400);
        }

        .cb-select {
            appearance: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
            background-position: right 0.75rem center;
            background-repeat: no-repeat;
            background-size: 1.5em 1.5em;
            padding-right: 2.5rem;
        }

        /* Tables */
        .cb-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

        .cb-table thead th {
            background: var(--cb-gray-50);
            font-weight: 600;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--cb-gray-500);
            padding: 0.875rem 1rem;
            border-bottom: 1px solid var(--cb-gray-200);
            text-align: left;
        }

        .cb-table tbody td {
            padding: 0.875rem 1rem;
            border-bottom: 1px solid var(--cb-gray-100);
            font-size: 0.9rem;
        }

        .cb-table tbody tr:hover {
            background: var(--cb-gray-50);
        }

        /* Progress */
        .cb-progress {
            height: 8px;
            background: var(--cb-gray-200);
            border-radius: 4px;
            overflow: hidden;
        }

        .cb-progress-bar {
            height: 100%;
            background: linear-gradient(90deg, var(--cb-primary) 0%, var(--cb-primary-light) 100%);
            border-radius: 4px;
            transition: width 0.3s ease;
        }

        /* Tool Cards */
        .tool-card {
            position: relative;
            display: flex;
            flex-direction: column;
            padding: var(--cb-space-xl);
            background: var(--cb-bg);
            border-radius: var(--cb-radius-xl);
            border: 1px solid var(--cb-border);
            transition: var(--cb-transition);
            text-decoration: none;
            overflow: hidden;
        }

        .tool-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--cb-primary), #8b5cf6);
            opacity: 0;
            transition: var(--cb-transition);
        }

        .tool-card:hover {
            border-color: var(--cb-primary-light);
            box-shadow: var(--cb-shadow-lg);
            transform: translateY(-4px);
        }

        .tool-card:hover::before {
            opacity: 1;
        }

        .tool-card-icon {
            width: 56px;
            height: 56px;
            background: var(--cb-primary-50);
            border-radius: var(--cb-radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: var(--cb-space-lg);
            color: var(--cb-primary);
        }

        .tool-card-title {
            font-weight: 700;
            font-size: 1.25rem;
            color: var(--cb-text);
            margin-bottom: var(--cb-space-sm);
        }

        .tool-card-desc {
            color: var(--cb-text-secondary);
            font-size: 0.9rem;
            line-height: 1.6;
            flex-grow: 1;
        }

        .tool-card-action {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            margin-top: var(--cb-space-lg);
            font-weight: 600;
            color: var(--cb-primary);
        }

        /* Hero Section */
        .cb-hero {
            padding: var(--cb-space-2xl) 0;
            text-align: center;
            background: linear-gradient(180deg, var(--cb-bg) 0%, var(--cb-bg-secondary) 100%);
        }

        .cb-hero-title {
            font-size: 2.75rem;
            font-weight: 800;
            letter-spacing: -0.03em;
            line-height: 1.2;
            background: linear-gradient(135deg, var(--cb-text) 0%, var(--cb-primary) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: var(--cb-space-lg);
        }

        .cb-hero-subtitle {
            font-size: 1.25rem;
            color: var(--cb-text-secondary);
            max-width: 600px;
            margin: 0 auto var(--cb-space-xl);
            line-height: 1.7;
        }

        /* Utility Classes */
        .cb-text-primary { color: var(--cb-primary); }
        .cb-text-success { color: var(--cb-success); }
        .cb-text-warning { color: var(--cb-warning); }
        .cb-text-danger { color: var(--cb-danger); }
        .cb-text-muted { color: var(--cb-gray-500); }
        
        .cb-bg-primary { background: var(--cb-primary); }
        .cb-bg-success { background: var(--cb-success); }
        .cb-bg-warning { background: var(--cb-warning); }
        .cb-bg-danger { background: var(--cb-danger); }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in {
            animation: fadeInUp 0.5s ease forwards;
        }

        .animate-delay-1 { animation-delay: 0.1s; }
        .animate-delay-2 { animation-delay: 0.2s; }
        .animate-delay-3 { animation-delay: 0.3s; }
        .animate-delay-4 { animation-delay: 0.4s; }

        /* Tooltip */
        [data-tooltip] {
            position: relative;
        }

        [data-tooltip]::after {
            content: attr(data-tooltip);
            position: absolute;
            bottom: 100%;
            left: 50%;
            transform: translateX(-50%) translateY(-8px);
            padding: 0.375rem 0.75rem;
            background: var(--cb-gray-800);
            color: white;
            font-size: 0.75rem;
            border-radius: var(--cb-radius);
            white-space: nowrap;
            opacity: 0;
            visibility: hidden;
            transition: var(--cb-transition);
        }

        [data-tooltip]:hover::after {
            opacity: 1;
            visibility: visible;
        }

        /* Notification Container */
        #notificationContainer {
            position: fixed;
            top: 1.25rem;
            right: 1.25rem;
            z-index: 9999;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            pointer-events: none;
        }

        .notification {
            background: white;
            border-radius: var(--cb-radius-lg);
            box-shadow: var(--cb-shadow-lg);
            padding: 1rem 1.25rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            min-width: 320px;
            max-width: 420px;
            transform: translateX(120%);
            transition: transform 0.3s ease, opacity 0.3s ease;
            pointer-events: auto;
            opacity: 0;
            border-left: 4px solid var(--cb-gray-300);
        }

        .notification.show {
            transform: translateX(0);
            opacity: 1;
        }

        .notification {
            background: var(--cb-bg);
            border: 1px solid var(--cb-border);
            color: var(--cb-text);
        }

        .notification-success { border-left-color: var(--cb-success); }
        .notification-error { border-left-color: var(--cb-danger); }
        .notification-warning { border-left-color: var(--cb-warning); }
        .notification-info { border-left-color: var(--cb-info); }

        .notification i {
            font-size: 1.25rem;
            flex-shrink: 0;
        }

        .notification-success i { color: var(--cb-success); }
        .notification-error i { color: var(--cb-danger); }
        .notification-warning i { color: var(--cb-warning); }
        .notification-info i { color: var(--cb-info); }

        .notification span {
            flex-grow: 1;
            font-size: 0.9rem;
            color: var(--cb-text);
        }

        .notification-close {
            background: none;
            border: none;
            color: var(--cb-text-secondary);
            cursor: pointer;
            font-size: 1.25rem;
            padding: 0;
            line-height: 1;
        }

        .notification-close:hover {
            color: var(--cb-text);
        }
    </style>
</head>
